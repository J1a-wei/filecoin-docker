#!/usr/bin/env bash

. /etc/lotus/docker/bash-config

if [[ -z "$DAEMON" ]]
then
  echo "DAEMON not defined. Please setting up ..."
elif [ "$DAEMON" = true ]; then
  echo "Starting daemon"
  # Start the daemon process
  /usr/local/bin/lotus daemon
elif [ "$DAEMON" = false ]; then
  echo "DAEMON disabled."
fi